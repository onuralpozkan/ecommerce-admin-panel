doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Product
  body 
    h1 Create Product
    div 
      form(action="create-product" method="post") 
        label(for="product-name")
        input(type="text" name="product-name" id="product-name" placeholder="Enter a product name")
        label(for="category-name")
        input(type="text" name="category-name" id="category-name" placeholder="Enter a category name")
        button(type="submit") Submit